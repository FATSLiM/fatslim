from __future__ import print_function
import sys

try:
    import fatslimlib
except ImportError:
    fatslimlib = None
    print("ERROR: Could not find FATSLiM!")
    print("sys.path:")
    print(sys.path)
    sys.exit(1)

if __name__ == "__main__":
    import sys
    sys.exit(fatslimlib.main())
else:
    print("%s is not intended to be run as a library!" % __file__, file=sys.stderr)
